#include <iostream>

using namespace std;

class student {
    int rollno;
    char name[50];
    double fee;

public:
    void display() {
        cout << endl << "Name: " << name << endl;
        cout << "Roll No: " << rollno << endl;
        cout << "Fee: " << fee << endl;
    }

    student() {
        cout << "Enter name: ";
        cin.getline(name, 50);
        
        cout << "Enter the roll no.: ";
        cin >> rollno;
        
        cout << "Enter fee: ";
        cin >> fee;
    }
};

int main() {
    student s;
    s.display();
    return 0;
}


/*
Output :

Enter name: Bhumika
Enter the roll no.: 30
Enter fee: 10060

Name: bhumika
Roll No: 30
Fee: 10060
